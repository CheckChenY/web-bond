.header{
    height: 50px;
    opacity: 0.85;
    background-image: linear-gradient(to bottom, #286fdb, #387fda);
    padding: 8px 25px 8px 10px;
}
.header-left-text
{
    display: inline-block;
    margin-left: 10px;
    opacity: 0.85;
    font-family: Apple-Chancery;
    font-size: 18px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: 34px;
    letter-spacing: normal;
    text-align: left;
    color: #ffffff;
}

.header-right{
    text-align: right;
}

.header-right-input
{
    width: 240px;
    height: 30px;
    border-radius: 4px;
    background-color:rgba(255, 255, 255, 0.17);  
    opacity: 0.85;
}

.header-right-input .ant-input
{  
    background: transparent;
    font-family: PingFangSC;
    font-size: 13px;
    font-weight: normal;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: left;
    color: #ffffff;
    opacity: 0.85;    
    border:none;  
}

.header-right-button
{
    opacity: 0.85;
    font-family: PingFangSC;
    font-size: 13px;
    font-weight: 600;
    font-style: normal;
    font-stretch: normal;
    line-height: normal;
    letter-spacing: normal;
    text-align: center;
    color: #ffffff;
    background:transparent;
    border:none;
    box-shadow: none;
    height: 30px;
    padding: 0;
}
.header-right-button:hover
{
    background:transparent;
    color: #ffffff;
}
.header-right-button:active
{
    background:transparent;
    color: #ffffff;
}
.header-right-button:focus
{
    background:transparent;
    color: #ffffff;
}



